
<h2 class="text-info text-center mb-2">Agregar Alumno</h2>
<div class="container border">
    <form action="@Url.Action("guardarA", "Alumnos")" method="post">

        <div class="container m-3">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        <label for="nombre">Nombre:</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" name="nombre">
                        
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3">
                        <label for="apellido">Apellido:</label>
                    </div>
                    <div class="col-sm-3">
                        <input type="text" name="apellido">
                
                    </div>
                 
                </div>
            </div>

            <div class="form-group">
                <div class="row text-center">
                    <div class="col-sm-6">
                        <input type="submit" class="btn btn-success m-2" value="Agregar Alumno"></input>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>