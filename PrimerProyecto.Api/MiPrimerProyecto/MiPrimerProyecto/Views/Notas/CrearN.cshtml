@model Nota

<h1>Agregarlo al Curso</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GuardarN" method="post">
            <div class="form-group">
 
                <input type="number" name="alumnoid" value="@ViewBag.AlumnoId" readonly>

                <label asp-for="CursoID">Curso: </label>
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" asp-for="CursoID" name="cursoID">
                    @foreach (var item in ViewBag.CursoList)
                    {
                        <option value="@item.ID">@item.Materia</option>
                    }
                </select>
             

            </div>
            <input class="btn btn-success m-2" type="submit" value="Guardar">
        </form>
    </div>
</div>